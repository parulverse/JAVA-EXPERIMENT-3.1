1. Database Setup:
CREATE TABLE Employee (
  EmpID INT PRIMARY KEY,
  Name VARCHAR(50),
  Salary DECIMAL(10,2)
);

2. Servlet for displaying and searching employees (EmployeeServlet.java):
import java.io.*;
import javax.servlet.*;
import javax.servlet.http.*;
import java.sql.*;

public class EmployeeServlet extends HttpServlet {
  private Connection getConnection() throws SQLException {
    // Example for MySQL, adjust connection settings accordingly
    String url = "jdbc:mysql://localhost:3306/your_database";
    String user = "dbuser";
    String pass = "dbpassword";
    return DriverManager.getConnection(url, user, pass);
  }

  protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
    String empIdParam = request.getParameter("empId");
    response.setContentType("text/html");
    PrintWriter out = response.getWriter();

    out.println("<form method='get'>Search Employee by ID: <input type='text' name='empId'/> <input type='submit' value='Search'/></form>");

    try (Connection conn = getConnection()) {
      PreparedStatement ps;
      if (empIdParam != null && !empIdParam.trim().isEmpty()) {
        ps = conn.prepareStatement("SELECT * FROM Employee WHERE EmpID = ?");
        ps.setInt(1, Integer.parseInt(empIdParam));
      } else {
        ps = conn.prepareStatement("SELECT * FROM Employee");
      }

      ResultSet rs = ps.executeQuery();

      out.println("<table border='1'><tr><th>EmpID</th><th>Name</th><th>Salary</th></tr>");
      while (rs.next()) {
        out.println("<tr><td>" + rs.getInt("EmpID") + "</td><td>" + rs.getString("Name") +
                    "</td><td>" + rs.getBigDecimal("Salary") + "</td></tr>");
      }
      out.println("</table>");

      rs.close();
      ps.close();
    } catch (SQLException e) {
      out.println("Error: " + e.getMessage());
    }
  }
}
